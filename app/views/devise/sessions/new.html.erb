<div class="login-container">
  <h2>Entrar</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <label class="login-label">Email</label>
      <%= f.input :email,
                  required: false,
                  label: false,
                  autofocus: true,
                  input_html: { class: "login-input", autocomplete: "email" } %>
      <label class="login-label">Senha</label>
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { class: "login-input", autocomplete: "current-password" } %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    </div>
    <div class="form-actions">
      <%= f.button :submit, "Entrar", class: "login-button" %>
  <% end %>
    <%= button_tag "Entrar com Google", id: "google-button", class: "google-button" %>
  <p class="forgot-password"><%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %></p>
  <%= render "devise/shared/links" %>
</div>

