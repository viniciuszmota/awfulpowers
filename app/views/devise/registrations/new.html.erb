<div class="login-container-sign-up">
<h2>Cadastrar</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs-sign-up">
      <label class="login-label-sign-up">Nome</label>
      <%= f.input :first_name, required: true, label: false, autofocus: true, input_html: { autocomplete: "first_name" } %>

      <label class="login-label-sign-up">Sobrenome</label>
      <%= f.input :last_name, required: true, label: false, autofocus: true, input_html: { autocomplete: "last_name" } %>

      <label class="login-label-sign-up">E-mail</label>
      <%= f.input :email, required: true, label: false, autofocus: true, input_html: { autocomplete: "email" } %>

      <label class="login-label-sign-up">Senha</label>
      <%= f.input :password, label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>

      <label class="login-label-sign-up">Confirmar senha</label>
      <%= f.input :password_confirmation, label: false, required: true, input_html: { autocomplete: "new-password" } %>

      <label class="login-label-sign-up">Insira sua foto</label>
      <%= f.input :photo, label: false, as: :file %>
  <div class="form-actions-sign-up">
    <%= f.button :submit, "Cadastrar", class: "login-button-sign-up" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
