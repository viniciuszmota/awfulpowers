<h1>Lista de poderes disponíveis</h1>
<ul>
  <div class="card-container">
    <% @powers.each do |power| %>
      <%= link_to power_path(power), class: "card-link" do %>
        <div class="card">
          <div class="card-image">
            <% if power.photo.present? %>
              <%= cl_image_tag power.photo.key, height: 300, width: 400, crop: :fill, class: "img-fluid rounded" %>
            <% else %>
              <p>Sem imagem disponível</p>
            <% end %>
          </div>
          <li><%= power.name %></li>
        </div>
      <% end %>
    <% end %> 
  </div>
</ul>