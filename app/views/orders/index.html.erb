<h1 class="text-center mb-4">Lista das suas ordens</h1>

<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="order-list">
    <ul class="list-group">
      <% total_price = 0 %>
      <% @orders.each do |order| %>
        <% total_price += order.power.price %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= link_to order.power.name, order_path(order) %></span>
            <strong><%= order.power.price %></strong>
            <%= button_to "Deletar", order_path(order), method: :delete, class: "custom-button" %>
          </li>
      <% end %>
    </ul>

      <div class="text-center mt-4">
        <h3 class="fw-bold">Pre√ßo Total: $<%= total_price %></h3>
      </div>

    <div class="text-center mt-4">
      <%= image_tag "uncleben.gif", alt: "Responsabilidade", class: "img-fluid" %>
    </div>
  </div>
</div>
